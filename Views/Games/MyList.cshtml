@model IEnumerable<NextUp.Models.Game>

    <h2>My Game List</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Platform</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var game in Model)
{
            <tr>
                <td>@game.Title</td>
                <td>@game.Platform</td>
                <td>@game.Status</td>
                <td>
                    <form asp-controller="Games" asp-action="RemoveFromList" method="post">
                        <input type="hidden" name="id" value="@game.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                </td>
            </tr>
}
        </tbody>
    </table>
