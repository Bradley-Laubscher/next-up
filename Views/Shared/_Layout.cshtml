<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Next Up</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="wrapper" style="display: flex; flex-direction: column; min-height: 100vh;">

        <header class="page-header">
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow fixed-top">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Next Up</a>
                    <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item d-none" id="myListLink">
                                <a class="nav-link text-dark" asp-controller="Games" asp-action="MyList">My List</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav d-flex align-items-center">
                            <li class="nav-item d-none" id="welcomeMsg">
                                <span class="nav-link text-dark">Welcome</span>
                            </li>
                            <li class="nav-item d-none" id="logoutButton">
                                <a class="nav-link text-dark" href="#" onclick="logout(); return false;">Logout</a>
                            </li>
                            <li class="nav-item" id="loginButton">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Main content area -->
        <div class="content" style="flex-grow: 1; padding-top: 56px;">
            <main role="main" class="pb-3">
                <div class="snake-container"></div>
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; @DateTime.Now.Year - Next Up
            </div>
        </footer>
    </div>

    @RenderSection("Scripts", required: false)

    <!-- Firebase Scripts -->
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.1/firebase-auth.js"></script>

    <!-- Bootstrap Bundle (includes Popper) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/firebaseAuth.js"></script>
    <script src="~/js/snake.js"></script>
</body>
</html>