@model NextUp.Models.HomeViewModel

<h2 class="mb-4">New Releases</h2>
<div class="row">
    @foreach (var game in Model.NewReleases)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <img src="@game.CoverImageUrl" class="card-img-top" alt="@game.Title">
                <div class="card-body">
                    <h5 class="card-title">@game.Title</h5>
                    <p class="card-text">@game.Platform</p>
                    <p class="card-text"><small class="text-muted">Released: @game.ReleaseDate?.ToString("MMMM dd, yyyy")</small></p>
                </div>
            </div>
        </div>
    }
</div>

<h2 class="mt-5 mb-4">Coming Soon</h2>
<div class="row">
    @foreach (var game in Model.ComingSoon)
    {
        <div class="col-md-4 mb-3">
            <div class="card h-100">
                <img src="@game.CoverImageUrl" class="card-img-top" alt="@game.Title">
                <div class="card-body">
                    <h5 class="card-title">@game.Title</h5>
                    <p class="card-text">@game.Platform</p>
                    <p class="card-text"><small class="text-muted">Release Date: @game.ReleaseDate?.ToString("MMMM dd, yyyy")</small></p>
                </div>
            </div>
        </div>
    }
</div>
